@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_LoginLayout2";
}

<div class="login-area">
    <div class="container">
        <div class="login-box ptb--100">
            <form method="post">
                <div class="login-form-head">
          @*           <h4>Login</h4> *@
                    <h4>Driver Violation</h4>
                </div>
                <div class="login-form-body">
                    <div class="form-gp">
                        <div for="exampleInputName1" class="mb-2">Employee Number</div>
                        <input type="text"  asp-for="Input.EmployeeNumber" id="exampleInputName1" class="p-3"/>
                            <span asp-validation-for="Input.EmployeeNumber" class="text-danger"></span>
                            <i class="ti-user p-2"></i>
                            <div class="text-danger"></div>
                    </div>
                    <div class="form-gp">
                        <div for="exampleInputName1" class="mb-2">Password</div>
                        <input type="password"  asp-for="Input.Password" id="exampleInputPassword1" class="p-3" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <i class="ti-lock p-2"></i>
                        <div class="text-danger"></div>
                    </div>
                    <div class="submit-btn-area">
                        <button id="form_submit" type="submit">Submit <i class="ti-arrow-right"></i></button>
                    </div>
                    
                </div>
            </form>
        </div>
    </div>
</div>









<section class="sign-in" style="margin-top:50px">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="~/images/driverLogin.jpg" alt="sing up image" width="1700" height="1200"></figure>
            </div>

            <div class="signin-form">
                <h2 class="form-title">Login</h2>
                <form method="post">
                    <div class="form-group">
                        <label><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="text" placeholder="EmployeeNumber" asp-for="Input.EmployeeNumber" />
                        <span asp-validation-for="Input.EmployeeNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label><i class="zmdi zmdi-lock"></i></label>
                        <input type="password" placeholder="Password" asp-for="Input.Password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <input type="checkbox" id="keep-me-logged-in" asp-for="Input.RememberMe">
                        <label for="remember-me" class="label-agree-term"><span><span></span></span>Remember me</label>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" style="background-color: #005580 !important; height:50px " value="Log in" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
